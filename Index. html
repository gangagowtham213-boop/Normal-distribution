    <script>
        // Global variables
        let temperatureData = [];
        let meanTemp = 20;
        let stdTemp = 5;
        let sampleSize = 365;
        let distributionChart, probabilityChart, empiricalRuleChart;

        // DOM elements
        const meanTempSlider = document.getElementById('meanTemp');
        const meanTempValue = document.getElementById('meanTempValue');
        const stdTempSlider = document.getElementById('stdTemp');
        const stdTempValue = document.getElementById('stdTempValue');
        const sampleSizeInput = document.getElementById('sampleSize');
        const generateDataBtn = document.getElementById('generateData');
        const resetDataBtn = document.getElementById('resetData');
        const minTempInput = document.getElementById('minTemp');
        const maxTempInput = document.getElementById('maxTemp');
        const calculateProbabilityBtn = document.getElementById('calculateProbability');

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeEventListeners();
            generateTemperatureData();
            updateCharts();
            updateStatistics();
            updateTable();
        });

        // Set up event listeners
        function initializeEventListeners() {
            meanTempSlider.addEventListener('input', function() {
                meanTempValue.value = this.value;
                meanTemp = parseFloat(this.value);
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            meanTempValue.addEventListener('input', function() {
                meanTempSlider.value = this.value;
                meanTemp = parseFloat(this.value);
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            stdTempSlider.addEventListener('input', function() {
                stdTempValue.value = this.value;
                stdTemp = parseFloat(this.value);
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            stdTempValue.addEventListener('input', function() {
                stdTempSlider.value = this.value;
                stdTemp = parseFloat(this.value);
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            sampleSizeInput.addEventListener('input', function() {
                sampleSize = parseInt(this.value);
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            generateDataBtn.addEventListener('click', function() {
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            resetDataBtn.addEventListener('click', function() {
                meanTemp = 20;
                stdTemp = 5;
                sampleSize = 365;
                
                meanTempSlider.value = meanTemp;
                meanTempValue.value = meanTemp;
                stdTempSlider.value = stdTemp;
                stdTempValue.value = stdTemp;
                sampleSizeInput.value = sampleSize;
                
                generateTemperatureData();
                updateCharts();
                updateStatistics();
                updateTable();
            });

            calculateProbabilityBtn.addEventListener('click', function() {
                calculateProbabilities();
            });
        }

        // Generate temperature data following normal distribution
        function generateTemperatureData() {
            temperatureData = [];
            for (let i = 0; i < sampleSize; i++) {
                // Box-Muller transform for normal distribution
                let u1 = Math.random();
                let u2 = Math.random();
                let z0 = Math.sqrt(-2 * Math.log(u1)) * Math.cos(2 * Math.PI * u2);
                let temperature = meanTemp + z0 * stdTemp;
                temperatureData.push(parseFloat(temperature.toFixed(2)));
            }
            // Sort data for better visualization
            temperatureData.sort((a, b) => a - b);
        }

        // Calculate normal distribution probability
        function normalPDF(x, mean, std) {
            return (1 / (std * Math.sqrt(2 * Math.PI))) * 
                   Math.exp(-0.5 * Math.pow((x - mean) / std, 2));
        }

        // Calculate cumulative distribution function (CDF) using approximation
        function normalCDF(x, mean, std) {
            // Approximation of the standard normal CDF
            const z = (x - mean) / std;
            const t = 1 / (1 + 0.2316419 * Math.abs(z));
            const d = 0.3989423 * Math.exp(-z * z / 2);
            let probability = d * t * (0.3193815 + t * (-0.3565638 + t * (1.781478 + t * (-1.821256 + t * 1.330274))));
            
            if (z > 0) {
                return 1 - probability;
            } else {
                return probability;
            }
        }

        // Update all charts
        function updateCharts() {
            updateDistributionChart();
            updateProbabilityChart();
            updateEmpiricalRuleChart();
        }

        // Update the main distribution chart
        function updateDistributionChart() {
            const ctx = document.getElementById('distributionChart').getContext('2d');
            
            if (distributionChart) {
                distributionChart.destroy();
            }
            
            // Create histogram data
            const minTemp = Math.min(...temperatureData);
            const maxTemp = Math.max(...temperatureData);
            const binCount = 20;
            const binSize = (maxTemp - minTemp) / binCount;
            
            let histogramData = Array(binCount).fill(0);
            let binLabels = [];
            
            for (let i = 0; i < binCount; i++) {
                const binStart = minTemp + i * binSize;
                const binEnd = binStart + binSize;
                binLabels.push(`${binStart.toFixed(1)}-${binEnd.toFixed(1)}`);
                
                histogramData[i] = temperatureData.filter(temp => 
                    temp >= binStart && temp < binEnd
                ).length;
            }
            
            // Create normal curve data
            const normalCurveData = [];
            const step = (maxTemp - minTemp) / 100;
            for (let x = minTemp - 5; x <= maxTemp + 5; x += step) {
                normalCurveData.push({
                    x: x,
                    y: normalPDF(x, meanTemp, stdTemp) * sampleSize * binSize
                });
            }
            
            distributionChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: binLabels,
                    datasets: [
                        {
                            label: 'Temperature Frequency',
                            data: histogramData,
                            backgroundColor: 'rgba(54, 162, 235, 0.7)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Normal Distribution',
                            data: normalCurveData,
                            type: 'line',
                            backgroundColor: 'rgba(255, 99, 132, 0)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 2,
                            pointRadius: 0,
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Frequency'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Temperature (°C)'
                            }
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'Daily Temperature Distribution vs Normal Curve',
                            font: {
                                size: 16
                            }
                        },
                        legend: {
                            position: 'top',
                        }
                    }
                }
            });
        }

        // Update probability chart
        function updateProbabilityChart() {
            const ctx = document.getElementById('probabilit
